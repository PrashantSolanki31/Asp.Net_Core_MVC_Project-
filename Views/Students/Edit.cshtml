@model MVC_Week2_Project1.Models.Student

<h1>Edit Student</h1>

@if(Model is null)
{
    <p>No student found with this ID</p>
}
else{



<form method="post">
    <div class="mt-3">
        <label class="form-label">Id</label>
        <input type="hidden"   asp-for="Id"   />
    </div>

    <div class="mt-3">
        <label class="form-label">Name</label>
        <input type="text" name="name" class="form-control" asp-for="Name" />
    </div>

    <div class="mt-3">
        <label class="form-label">Email</label>
        <input type="text" name="email" class="form-control" asp-for="Email" />
    </div>

    <div class="mt-3">
        <label class="form-label">Phone</label>
        <input type="text" name="phone" class="form-control" asp-for="Phone" />
    </div>

    <div class="mt-3">
        <label class="form-label">Subscribed</label>
        <input type="checkbox" name="subscribed" class="form-check-input" asp-for="Subscribed" />
    </div>

    <div class="mt-3">
        <button type="submit" class="btn btn-primary">Save</button>
        <button type="submit" class="btn btn-danger"
        asp-action="Delete"
        asp-controller="Students">Delete</button>
    </div>



</form>

}