
@model MVC_Week2_Project1.Models.AddStudentViewModel

<h1>Add Student</h1>

<form method="post">
<div class="mt-3">
    <label class="form-label">Name</label>
    <input type="text" name="name" class="form-control" asp-for="Name"/>
</div>

<div class="mt-3">
    <label class="form-label">Email</label>
    <input type="text" name="email" class="form-control" asp-for="Email" />
</div>

    <div class="mt-3">
        <label class="form-label">Phone</label>
        <input type="text" name="phone" class="form-control" asp-for="Phone" />
    </div>

    <div class="mt-3">
        <label class="form-label">Subscribed</label>
        <input type="checkbox" name="subscribed" class="form-check-input" asp-for="Subscribed" />
    </div>

<div class="mt-3">
   <button type="submit" class="btn btn-primary">Save</button>
</div>

</form>